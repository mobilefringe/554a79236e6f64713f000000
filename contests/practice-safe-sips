<script>
    $(document).ready(function() {
        init();
        function renderAll (){
            init_hours();
            
            var tags = "<meta property=\"og:image\" content=\"https://codecloud.cdn.speedyrails.net/sites/599c9b426e6f6420f1550000/image/png/1539809881000/sip.png/%E2%80%9C/%3E\"/>" + "<meta property=\"og:title\" content=\"Practice Safe Sips\"/>"
            $("head").append(tags);

            // Check if to show popup or regular contest
            var query = window.location.search;
            if (query !== "") {
                var search_part = query.split('?')[1];
                if(search_part === "success") {
                    open_popup();
                }
            }
            
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            console.log("slug", slug)
            var contestDetails = getContestBySlug(slug);
            console.log("contestDetails", contestDetails)
            
            //Campaign Monitor Sign Up
            $('#contest_form_20vic').submit(function (e) {
                var str1 = $("#first_name").val();
                var str2 = $("#last_name").val();
                var fullname = str1 + " " + str2;
                $("#cm-name").attr('value', fullname);
        
                if ($("#first_name").val() == "") {
                    alert("Please Enter First Name");
                    $("#first_name").focus();
                    return false;
                } else if ($("#last_name").val() == "") {
                    alert("Please Enter Last Name");
                    $("#last_name").focus();
                    return false;
                } else if ($("#fieldweury").val() == "") {
                    alert("Please Enter Phone Number");
                    $("#fieldweury").focus();
                    return false;
                } else if ($("#fieldwekuu").val() == "") {
                    alert("Please Enter Postal Code");
                    $("#fieldwekuu").focus();
                    return false;
                } else if ($("#fieldEmail").val() == "") {
                    alert("Please Enter Email");
                    $("#fieldEmail").focus();
                    return false;
                } else if ($("#agree_terms").prop("checked") != true) {
                    alert("Please agree to the term and conditions before submitting the contest.");
                    $("#agree_terms").focus();
                    return false;
                } else{
                    
                }
            });

            $(".modal-backdrop").remove();
        }
        
        $( "#popup_background" ).click(function() {
            $(".popup_bg").fadeOut();
        });
        
        $( "#close_popup" ).click(function() {
            $(".popup_bg").fadeOut();
        });

        function open_popup(){
            $(".popup_bg").fadeIn();
        }
            
        loadMallDataCached(renderAll);
    });
</script>